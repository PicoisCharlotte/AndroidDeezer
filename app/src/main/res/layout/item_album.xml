<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/album_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/album_image"
            android:layout_width="50dp"
            android:layout_height="49dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/relative_layout_background">

        <TextView
                android:id="@+id/album_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cooljazz"
                android:paddingStart="10dp"
                android:text="Title"/>

        <TextView
                android:id="@+id/album_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/album_title"
                android:fontFamily="@font/cooljazz"
                android:paddingStart="10dp"
                android:text="Artist"/>

        <TextView
                android:id="@+id/album_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/album_artist"
                android:fontFamily="@font/cooljazz"
                android:paddingEnd="5dp"
                android:layout_alignParentRight="true"
                android:text="D"/>

    </RelativeLayout>

</LinearLayout>